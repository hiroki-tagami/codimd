root = true

# Tab indentation
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.vue]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{.travis.yml,npm-shrinkwrap.json,package.json}]
indent_style = space
indent_size = 2
